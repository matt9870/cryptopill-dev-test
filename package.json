	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"compile": "node_modules/.bin/tsc",
		"build": "npm install && npm run compile",
		"dev": "node_modules/.bin/nodemon -e \"ts\" --exec \"node_modules/.bin/ts-node\" src/server.ts",
		"stag": "export NODE_ENV=stag && node_modules/.bin/nodemon -e \"ts\" --exec \"node_modules/.bin/ts-node\" src/server.ts",
		"tslint": "tslint --project tsconfig.json",
		"tslint:fix": "tslint --project tsconfig.json --fix",
		"format": "prettier --write \"{,!(node_modules|dist|build|deploy|views|swagger|coverage)/**/}*.{ts,json}\"",
		"prepush": "npm run tslint",
		"precommit": "lint-staged",
		"deploy:dev": "npm run build && pm2 start ./ecosystem.config.js --only cryptopill",
		"deploy:prod": "npm run build && pm2 start ./ecosystem.config.js --only cryptopill-dev",
		"redeploy:dev": "npm run build && pm2 restart cryptopill",
		"redeploy:prod": "npm run build && pm2 restart cryptopill-dev"
	},
	"author": "",
	"license": "ISC",
	"husky": {
		"hooks": {
			"pre-commit": "npm run tslint:fix && npm run format && pretty-quick --staged"
		}
	},
	"lint-staged": {
		"{src,test}/**/*.ts*": [
			"prettier --write",
			"git add"
		]
	},
